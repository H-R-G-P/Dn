{% extends 'base.html.twig' %}

{% block title %}{% trans %}Song collection{% endtrans %}{% endblock %}

{% block header %}{% trans %}Song collection{% endtrans %}{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ url('homepage') }}">{% trans %}Homepage{% endtrans %}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{% trans %}Songs{% endtrans %}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="accordion" id="accordion">
            {% for song in songs %}
                <div class="card">
                    <div class="card-header" id="heading{{ song.id }}">
                        <h2 class="mb-0">
                            <button class="btn btn-link btn-block text-left" type="button" data-toggle="collapse" data-target="#collapse{{ song.id }}" aria-expanded="true" aria-controls="collapse">
                                {{ song.name }}
                                {% if song.genre %}<small class="hidden-xs">({{ song.genre }})</small>{% endif %}
                            </button>
                        </h2>
                    </div>

                    <div id="collapse{{ song.id }}" class="collapse show" aria-labelledby="heading{{ song.id }}" data-parent="#accordion">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">{{ song.text }}</div>
                                <div class="col-sm-6 col-md-4 col-lg-4 hidden-xs">
                                    {% if song.genre %} Жанр: <strong>{{ song.genre }}</strong><br/>{% endif %}
                                    {% if song.artist %} Выканаўца: <strong>{{ song.artist }}</strong><br/>{% endif %}
                                    {% if song.area %} Вобласьць: <strong>{{ song.area }}</strong><br/>{% endif %}
                                    {% if song.region %} Раён: <strong>{{ song.region }}</strong><br/>{% endif %}
                                    {% if song.place %} Месца: <strong>{{ song.place }}</strong><br/>{% endif %}
                                    {% if song.year %} Год: <strong>{{ song.year }}</strong><br/>{% endif %}
                                    {% if song.record %} Запісан: <strong>{{ song.record }}</strong><br/>{% endif %}
                                    {% if song.comments %} {{ song.comments }}<br/>{% endif %}

                                {#    <?  $files = array();
                                        if ($song->audio_origin && file_exists($_SERVER["DOCUMENT_ROOT"].'/audio/origin/'.$song->audio_origin))
                                            $files[] = array('file' => '/audio/origin/'.$song->audio_origin, 'mime' => mime_content_type($_SERVER["DOCUMENT_ROOT"].'/audio/origin/'.$song->audio_origin), 'type' => 'origin');
