{% extends 'base.html.twig' %}

{% block title %}{{ source.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="text-center my-5">{{ source.name }}</h1>
        </div>
        <div class="row">
            <div class="col">
                <iframe src="https://www.openstreetmap.org/export/embed.html?bbox=23.6%2C51.3%2C32.7%2C56.14&amp;layer=mapnik"
                        style="border: 1px solid black; width: 100%; height: 300%;">
                </iframe>
            </div>
            <div class="col">
                <div class="list-group list-group-flush">
                    {% for dance in source.dances %}
                        <a href="{{ url('dance', {'slug': dance.slug})}}" class="list-group-item list-group-item-action">
                            {{ dance.name }}
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}