{% extends 'base.html.twig' %}

{% block title %}{% trans %}Regions{% endtrans %}{% endblock %}

{% block header %}{% trans %}Regions{% endtrans %}{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ url('homepage') }}">{% trans %}Homepage{% endtrans %}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{% trans %}Regions{% endtrans %}</li>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <div class="list-group list-group-flush">
                {% for region in regions %}
                    <a href="{{ url('district', {'slug': region.slug}) }}" class="list-group-item list-group-item-action">
                        {{ region.name }} ({{ region.dancesCount }} {% trans %}dan.{% endtrans %})
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
