{% extends 'base.html.twig' %}

{% block title %}Dances of Belarus{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="text-center my-5">Dances of Belarus</h1>
        </div>

        <div class="row">
            <div class="col-lg-3 col-md-6 col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Regions</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            {% for region in regions %}
                                <a href="{{ url('region', {'slug': region.slug}) }}" class="list-group-item list-group-item-action">
                                    {{ region.name }}({{ region.dances|length }})
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 mt-sm-3 mt-md-0">
                <div class="card">
                    <div class="card-header">
                        <h5>Types</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            {% for type in types %}
                                <a href="{{ url('type', {'slug': type.slug})}}" class="list-group-item list-group-item-action">
                                    {{ type.name }}({{ type.dances|length }})
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 mt-sm-3 mt-md-3 mt-lg-0">
                <div class="card">
                    <div class="card-header">
                        <h5>Sources</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            {% for source in sources %}
                                <a href="{{ url('source', {'slug': source.slug})}}" class="list-group-item list-group-item-action">
                                    {{ source.name }}({{ source.dances|length }})
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-sm-12 mt-sm-3 mt-md-3 mt-lg-0">
                <div class="card">
                    <div class="card-header">
                        <h5>Top 10 dances</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            {% for dance in top_ten_dances %}
                                <a href="{{ url('dance', {'slug': dance.slug})}}" class="list-group-item list-group-item-action">
                                    {{ dance.name }}({{ dance.versions|length }})
                                </a>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
