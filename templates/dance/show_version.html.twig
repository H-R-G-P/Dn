{% extends 'base.html.twig' %}

{% block title %}
    {% if version.name is same as('') %}
        {{ dance.name }}
    {% else %}
        {{ version.name }}
    {% endif %}
{% endblock %}

{% block header %}
    {% if version.name is same as('') %}
        {{ dance.name }}
    {% else %}
        {{ version.name }}
    {% endif %}
{% endblock%}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ url('homepage') }}">{% trans %}Homepage{% endtrans %}</a></li>
    <li class="breadcrumb-item"><a href="{{ url('dances') }}">{% trans %}Dances{% endtrans %}</a></li>
    <li class="breadcrumb-item"><a href="{{ url('dance', {'slug': dance.slug}) }}">{{ dance.name }}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ version.name }}</li>
{% endblock %}

{% block rightOfBreadcrumb %}
    <small class="bg-secondary text-white rounded-pill px-2 h-50">{% trans %}Views{% endtrans %}: {{ version.views }}</small>
{% endblock %}

{% block content %}
    {% if version.youtube is not same as(null) %}
        <div class="row mb-3">
            <div class="col">
                <iframe width="100%" height="600" src="{{ version.youtube }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    {% endif %}

    <div class="row">
        <div class="col">
            <iframe src="https://www.openstreetmap.org/export/embed.html?bbox=23.6%2C51.3%2C32.7%2C56.14&amp;layer=mapnik"
                    style="border: 1px solid black; width: 100%; height: 300%;">
            </iframe>
        </div>
    </div>
{% endblock %}