{% extends 'base.html.twig' %}

{% block title %}{{ dance.name }}|{{ version.name }}{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <h1 class="text-center mt-5">{{ dance.name }}|{{ version.name }}</h1>
        </div>
        <div class="row">
            <div class="d-flex justify-content-end mb-3">
                <small class="bg-secondary text-white rounded-pill px-2">Views: {{ version.views }}</small>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col">
                <iframe width="100%" height="600" src="https://www.youtube.com/embed/{{ version.youtube }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <iframe src="https://www.openstreetmap.org/export/embed.html?bbox=23.6%2C51.3%2C32.7%2C56.14&amp;layer=mapnik"
                        style="border: 1px solid black; width: 100%; height: 300%;">
                </iframe>
            </div>
        </div>
    </div>
{% endblock %}