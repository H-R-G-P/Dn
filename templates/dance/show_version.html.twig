{% extends 'base.html.twig' %}

{% if version.name is same as('') %}
    {% set title = dance.name %}
{% else %}
    {% set title = version.name %}
{% endif %}

{% block title %} {{ title }} {% endblock %}

{% block header %} {{ title }} {% endblock%}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ url('homepage') }}">{% trans %}Homepage{% endtrans %}</a></li>
    <li class="breadcrumb-item"><a href="{{ url('dances') }}">{% trans %}Dances{% endtrans %}</a></li>
    <li class="breadcrumb-item"><a href="{{ url('dance', {'slug': dance.slug}) }}">{{ dance.name }}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ version.name }}</li>
{% endblock %}

{% block rightOfBreadcrumb %}
    <small class="bg-secondary text-white rounded-pill px-2 h-50">{% trans %}Views{% endtrans %}: {{ version.views }}</small>
{% endblock %}

{% block content %}
    <div class="card card-body mb-3">
        {% if version.place %}
            {% trans %}Village{% endtrans %} {{ version.place.name }}
            <br>
        {% endif %}
        {% if version.source %}
            {% trans %}Source{% endtrans %} {{ version.source.name }}
            <br>
        {% endif %}
        {% if version.source2 %}
            {% trans %}Second source{% endtrans %} {{ version.source2.name }}
            <br>
        {% endif %}
        {% trans %}Type{% endtrans %}
            {% if version.type %}
                {{ version.type.name }}
            {% else %}
                {% trans %}Improvisation{% endtrans %}
            {% endif %}
        <br>
        <a href="#"><em>{% trans %}Video{% endtrans %}</em></a>
    </div>

    {% if version.youtube %}
        <div class="row mb-3">
            <div class="col">
                <iframe width="100%" height="600" src="{{ version.youtube }}" title="{{ title }}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
        </div>
    {% endif %}
    
    <div class="row">
        <div class="col">
            <iframe src="https://www.openstreetmap.org/export/embed.html?bbox=23.6%2C51.3%2C32.7%2C56.14&amp;layer=mapnik"
                    style="border: 1px solid black; width: 100%; height: 300%;">
            </iframe>
        </div>
    </div>
{% endblock %}