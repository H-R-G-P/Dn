{% extends 'base.html.twig' %}

{% block title %}{{ dance.name }}{% endblock %}

{% block header %}{{ dance.name }}{% endblock%}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ url('homepage') }}">{% trans %}Homepage{% endtrans %}</a></li>
    <li class="breadcrumb-item"><a href="{{ url('dances') }}">{% trans %}Dances{% endtrans %}</a></li>
    <li class="breadcrumb-item active" aria-current="page">{{ dance.name }}</li>
{% endblock%}

{% block content %}
    <div class="row">
        <div class="col">
            <div class="list-group list-group-flush">
                {% for version in dance.versions %}
                    <a href="{{ url('version', {'slugDance': dance.slug, 'slugVersion': version.slug}) }}" class="list-group-item list-group-item-action">
                        <b>{% if version.name is same as('') %}
                                {{ dance.name }}
                            {% else %}
                                {{ version.name }}
                            {% endif %}
                        </b> {{ version.address }} ({{ version.views }})
                    </a>
                {% endfor %}
            </div>
        </div>
        {% if map_json is not same as(null) %}
            <div class="col">
                <div id="map"></div>
            </div>
        {% endif %}
    </div>
    <div hidden id="map_json">{{ map_json|raw }}</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('regions') }}
{% endblock %}